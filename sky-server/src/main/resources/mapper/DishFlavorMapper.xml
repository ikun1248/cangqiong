<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sky.mapper.DishFlavorMapper">
    <insert id="add">
        insert into dish_flavor (name, value, dish_id)
        values
        <foreach collection="dishFlavorList" item="dishFlavor" separator=",">
            (#{dishFlavor.name}, #{dishFlavor.value}, #{dishFlavor.dishId})
        </foreach>
    </insert>
    <delete id="deleteByDishIds">
        delete from dish_flavor
        where dish_id in
        <foreach collection="ids" separator="," item="id" open="(" close=")">
            #{id}
        </foreach>
    </delete>
    <select id="getByDishId" resultType="com.sky.entity.DishFlavor">
        select * from dish_flavor where dish_id = #{dishId}
    </select>



</mapper>